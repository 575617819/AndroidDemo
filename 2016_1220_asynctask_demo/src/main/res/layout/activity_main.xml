<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yh.asynctask.MainActivity">

    <Button
        android:id="@+id/bt_main_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示当前天气信息" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#d71b1b" />

    <TextView
        android:id="@+id/tv_main_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="城市："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_main_temp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最高气温："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_main_temp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最低气温："
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_main_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日期："
        android:textSize="20sp" />

</LinearLayout>
